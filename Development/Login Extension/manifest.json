{
  "manifest_version": 3,
  "name": "Amaze",
  "description": "Store frequently used links and open them from a popup.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.*/*",
    "https://wci-neo-dev-2025.vercel.app/*"
  ]
}
